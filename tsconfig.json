{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM.Iterable", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./src/*"],
			"@interfaces/*": ["./src/interfaces/*"],
			"@state/*": ["./src/state/*"]
		}
	},
	"include": ["src"]
}
